# Database .env file
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"
DATABASE_URL_UNPOOLED="postgresql://username:password@localhost:5432/database_name?schema=public"

# NextAuth / Authentication
NEXTAUTH_SECRET=
NEXTAUTH_URL="http://localhost:3000"

# AI Provider (OpenAI)
OPENAI_API_KEY=
# Or Anthropic
ANTHROPIC_API_KEY=

# AWS S3 (or use MinIO for local dev)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME="compliance-evidence"

# MinIO (Local S3 Alternative)
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET="compliance-local"

# Redis (optional for local dev)
REDIS_URL="redis://localhost:6379"

# Email (SendGrid / Resend)
SENDGRID_API_KEY=
FROM_EMAIL="noreply@yourcompany.com"

# Monitoring (Production)
SENTRY_DSN=
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_EVIDENCE_UPLOAD="true"